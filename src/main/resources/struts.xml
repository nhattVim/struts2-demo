<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN" "http://struts.apache.org/dtds/struts-2.5.dtd">

<struts>
    <constant name="struts.i18n.encoding" value="UTF-8" />
    <constant name="struts.devMode" value="true" />

    <package name="default" namespace="/" extends="struts-default">
        <!-- Interceptors -->
        <interceptors>
            <!-- Define custom interceptors -->
            <interceptor name="loggingInterceptor" class="interceptors.LoggingInterceptor" />
            <interceptor name="authInterceptor" class="interceptors.AuthInterceptor" />

            <!-- Define stacks of interceptors -->
            <interceptor-stack name="secureStack">
                <interceptor-ref name="loggingInterceptor" />
                <interceptor-ref name="authInterceptor" />
                <interceptor-ref name="defaultStack" />
            </interceptor-stack>
        </interceptors>

        <!-- Apply stack to all actions -->
        <default-interceptor-ref name="secureStack" />

        <!-- Global results -->
        <global-results>
            <result name="error">/views/error.jsp</result>
            <result name="login" type="redirectAction">login</result>
        </global-results>

        <!-- Default index route -->
        <action name="">
            <result type="redirectAction">home</result>
        </action>

        <!-- Login page -->
        <action name="login" class="actions.LoginAction" method="input">
            <result name="input">/views/login.jsp</result>
        </action>

        <!-- Login submit -->
        <action name="doLogin" class="actions.LoginAction" method="execute">
            <result name="success" type="redirectAction">home</result>
            <result name="error">/views/login.jsp</result>
        </action>

        <!-- Logout -->
        <action name="logout" class="actions.LogoutAction">
            <result name="success" type="redirectAction">login</result>
        </action>

        <!-- Home -->
        <action name="home" class="actions.HomeAction">
            <result name="success">/views/home.jsp</result>
            <result name="login" type="redirectAction">login</result>
        </action>

        <!-- News detail -->
        <action name="newsDetail" class="actions.NewsDetailAction">
            <result name="success">/views/news.jsp</result>
        </action>

        <!-- About -->
        <action name="about" class="actions.AboutAction">
            <result name="success">/views/about.jsp</result>
        </action>

        <!-- Contact -->
        <action name="contact" class="actions.ContactAction">
            <result name="input">/views/contact.jsp</result>
            <result name="success">/views/contact.jsp</result>
        </action>
    </package>
</struts>
